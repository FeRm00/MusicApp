<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kikisnight.musicapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NowPlayingActivity"
            android:label="@string/n_text"/>
        <activity
            android:name=".PlaylistActivity"
            android:label="@string/p_text"/>
        <activity
            android:name=".ListArtistActivity"
            android:label="@string/li_text"/>
        <activity
            android:name=".SearchScreenActivity"
            android:label="@string/se_text">
        </activity>
    </application>

</manifest>